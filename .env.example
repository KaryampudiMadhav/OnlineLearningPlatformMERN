# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# JWT Secrets (change in production!)
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_SECRET=your_super_secret_access_token_key_here
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_here
JWT_EXPIRES_IN=1d

# AI API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Inngest Configuration
INNGEST_EVENT_KEY=your_inngest_event_key_here
INNGEST_SIGNING_KEY=your_inngest_signing_key_here
INNGEST_DEV_MODE=true

# Email Configuration
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password_here

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Frontend Vite Variables (must be prefixed with VITE_)
VITE_BACKEND_AI_ENDPOINT=http://localhost:5000/api/ai-support/chat
